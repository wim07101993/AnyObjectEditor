<controls:MetroWindow
    x:Class="DatabaseManager.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:DatabaseManager.ViewModels"
    xmlns:views="clr-namespace:DatabaseManager.Views"
    Title="{Binding Title}"
    d:DataContext="{d:DesignInstance viewModels:ViewBaseViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <views:ViewBase />
    </Grid>
</controls:MetroWindow>