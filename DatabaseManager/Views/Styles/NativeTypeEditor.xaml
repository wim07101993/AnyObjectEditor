<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DatabaseManager.Views.Controls"
    xmlns:converters="clr-namespace:DatabaseManager.Helpers.Converters"
    xmlns:mahAppsControls="http://metro.mahapps.com/winfx/xaml/controls">

    <converters:ObjectToDoubleConverter x:Key="ObjectToDoubleConverter" />

    <ControlTemplate x:Key="ChromelessButtonTemplate" TargetType="{x:Type ButtonBase}">
        <Button />
    </ControlTemplate>

    <Style TargetType="{x:Type controls:NativeTypeEditor}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:NativeTypeEditor}">
                    <StackPanel HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                        <TextBlock
                            Margin="7,2,0,0"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="Bottom"
                            Background="{DynamicResource ControlBackgroundBrush}"
                            FontFamily="{TemplateBinding FontFamily}"
                            FontSize="10"
                            FontStretch="{TemplateBinding FontStretch}"
                            FontStyle="{TemplateBinding FontStyle}"
                            FontWeight="{TemplateBinding FontWeight}"
                            Foreground="{DynamicResource TextBrush}"
                            Text="{TemplateBinding PropertyName}"
                            TextWrapping="Wrap" />
                        <StackPanel HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                            <TextBox
                                Name="TextBox"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="Top"
                                Background="{DynamicResource ControlBackgroundBrush}"
                                CaretBrush="{DynamicResource AccentBaseColorBrush}"
                                FontFamily="{TemplateBinding FontFamily}"
                                FontSize="{TemplateBinding FontSize}"
                                FontStretch="{TemplateBinding FontStretch}"
                                FontStyle="{TemplateBinding FontStyle}"
                                FontWeight="{TemplateBinding FontWeight}"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Mode=TwoWay}"
                                TextWrapping="Wrap"
                                Visibility="Collapsed" />
                            <mahAppsControls:NumericUpDown
                                Name="NumericUpDown"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="Top"
                                FontFamily="{TemplateBinding FontFamily}"
                                FontSize="{TemplateBinding FontSize}"
                                FontStretch="{TemplateBinding FontStretch}"
                                FontStyle="{TemplateBinding FontStyle}"
                                FontWeight="{TemplateBinding FontWeight}"
                                Foreground="{TemplateBinding Foreground}"
                                HideUpDownButtons="True"
                                Visibility="Collapsed"
                                Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Mode=TwoWay, Converter={StaticResource ObjectToDoubleConverter}}" />
                            <ToggleButton
                                Name="ToggleSwitch"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="Top"
                                IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Mode=TwoWay}"
                                Visibility="Collapsed" />
                        </StackPanel>
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Type" Value="Double">
                            <Setter TargetName="NumericUpDown" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="Type" Value="SByte">
                            <Setter TargetName="NumericUpDown" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="Type" Value="Short">
                            <Setter TargetName="NumericUpDown" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="Type" Value="Int">
                            <Setter TargetName="NumericUpDown" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="Type" Value="Long">
                            <Setter TargetName="NumericUpDown" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="Type" Value="String">
                            <Setter TargetName="TextBox" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="Type" Value="Bool">
                            <Setter TargetName="ToggleSwitch" Property="Visibility" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>